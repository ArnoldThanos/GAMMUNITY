{{#if user}}
<div class="container" id="homeContainer">
  <h2>Main Events:</h2>
  <div class="card-deck">    
      {{#each mainEvent}}     
        {{>mainEvent this}} 
      {{/each}}      
  </div>
</div>  

<div class="container" id="homeContainer">
      <div class="row">
        <div class="col-md-12" id="head"></div>
      </div>
        <h3>Other Events:</h3>
      <div class="row">
        <div class="col-md-8" id="principal">
          <div class="row"> 
            {{#each leftEvent}}  
              {{> secondaryEventPartial this}} 
            {{/each}}  
          </div>
        </div>
        <div class="col-md-4" id="lateral">
          <div class="row">
            <div class="col-md-12" id="anuncios">
              <aside>
                {{#if admin}}
                <h2>ADMIN Tools</h2>
                <br>
                <h4>New EVENT</h4>
                <a href="/events/new" class="SocialLogIn">CREATE EVENT</a>
                <h4>New Article</h4>           
                <a href="/article/new" class="SocialLogIn">WRITE A NEW!!</a>  
                {{/if}}                                   
              </aside>
            </div>
          </div>
        </div>
      </div>
</div>      
{{/if}}





